@using Microsoft.AspNet.Identity
@if(Request.IsAuthenticated)
{
  using(Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
  {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right nav-sup">
      <li><a class="btn btn-default" title="Haz clic para salir de la sesión" href="javascript:document.getElementById('logoutForm').submit()">Hola @User.Identity.GetUserName()!</a></li>
      <!--<li><a class="btn btn-default" href="javascript:document.getElementById('logoutForm').submit()">Salir</a></li>-->
    </ul>
  }
}
else
{
  <ul class="nav navbar-nav navbar-right nav-sup">
    <li>@Html.ActionLink("Entrar", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-default" })</li>
  </ul>
}
